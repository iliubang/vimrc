{
  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetStatusText": "Ⓢ ",
  "coc.preferences.formatOnType": false,
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.colorSupport": true,
  "coc.preferences.rootPatterns": [".git", ".projections.json"],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "svg", // coc-svg support svg format
    "dart", // diagnostic-languageserver support dart format
    "markdown"
  ],
  "coc.source.emoji.shortcut": "E",
  "coc.source.emoji.priority": 8,
  "coc.source.word.filetypes": ["markdown", "gitcommit", "log", "txt"],
  "coc.source.file.shortcut": "F",
  "coc.source.file.priority": 89,
  "coc.source.file.ignoreHidden": false,
  "coc.source.around.shortcut": "A",
  "coc.source.around.priority": 88,
  "coc.source.buffer.shortcut": "B",
  "coc.source.buffer.priority": 87,
  "coc.source.buffer.ignoreGitignore": false,
  // suggest
  "suggest.timeout": 500,
  "suggest.noselect": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.triggerCompletionWait": 100,
  "suggest.maxCompleteItemCount": 20,
  "suggest.detailMaxLength": 30,
  "suggest.detailField": "abbr",
  "suggest.snippetIndicator": " Ⓢ ",
  "suggest.echodocSupport": true,
  "suggest.removeDuplicateItems": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u2A15",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\u2663",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf530",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf6a6",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "snippets.shortcut": "S",
  "snippets.ultisnips.directories": ["UltiSnips", "snip"],
  "snippets.ultisnips.usePythonx": true,
  "snippets.ultisnips.enable": true,
  "snippets.snipmate.author": "liubang <it.liubang@gmail.com>",
  // diagnostic
  "diagnostic.infoSign": "ღ",
  "diagnostic.hintSign": "ஐ",
  "diagnostic.warningSign": "⚠",
  "diagnostic.errorSign": "✖",
  "diagnostic.enable": true,
  "diagnostic.signOffset": 9999999,
  "diagnostic.highlightOffset": 9999999,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic-languageserver.formatFiletypes": {
    "dart": "dartfmt"
  },
  "diagnostic-languageserver.filetypes": {
    "markdown": ["write-good"],
    "sh": "shellcheck"
    // "php": "phpcs"
  },
  // prettier
  "prettier.statusItemText": "ⓟ ",
  //emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "html.suggest.angular1": false, // angular1 is outdate, coc-angular support better
  // git
  "git.enableGutters": true,
  "git.signOffset": 99,
  "git.addGlameToVirtualText": true,
  "git.virtualTextPrefix": "     ",
  "git.branchCharacter": "\uf418",
  "git.addedSign.text": "▏",
  "git.changedSign.text": "▏",
  "git.removedSign.text": "▏",
  "git.topRemovedSign.text": "‾",
  "git.changeRemovedSign.text": "≃",
  "git.addedSign.hlGroup": "GitAddHi",
  "git.changedSign.hlGroup": "GitModifyHi",
  "git.removedSign.hlGroup": "GitDeleteHi",
  "git.topRemovedSign.hlGroup": "GitDeleteHi",
  "git.changeRemovedSign.hlGroup": "GitDeleteHi",
  // python
  "python.jediEnabled": true,
  "python.autoComplete.addBrackets": true,
  // java
  "java.jdt.ls.home": "/opt/app/jdtls",
  "java.jdt.ls.vmargs": "-javaagent:/opt/app/jar/lombok.jar -Xbootclasspath/p:/opt/app/jar/lombok.jar",
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "languageserver": {
    "ccls": {
      //"trace.server": "verbose",
      "command": "ccls",
      "filetypes": ["c", "cpp", "hpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "format": "b",
          "directory": "/tmp/ccls"
        },
        "capabilities": {
          "foldingRangeProvider": false,
          "workspace": {
            "workspaceFolders": {
              "supported": false
            }
          }
        },
        "clang": {
          "extraArgs": ["--gcc-toolchain=/usr"]
        },
        "completion": {
          "detailedLabel": true
        },
        "index": {
          "onChange": false,
          "initialNoLinkage": true,
          "threads": 2
        }
      }
    },
    "golang": {
      //"trace.server": "verbose"
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git"],
      "filetypes": ["go"],
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh", "zsh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"]
    }
  }
  // vim:ft=jsonc
}
