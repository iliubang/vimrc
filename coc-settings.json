{
  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetStatusText": "Ⓢ ",
  "coc.preferences.formatOnType": false,
  "coc.preferences.colorSupport": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "svg", // coc-svg support svg format
    "dart" // diagnostic-languageserver support dart format
  ],
  "coc.source.emoji.shortcut": "E",
  "coc.source.emoji.priority": 8,
  "coc.source.word.filetypes": ["markdown", "gitcommit", "log", "txt"],
  "coc.source.file.shortcut": "F",
  "coc.source.file.priority": 89,
  "coc.source.file.ignoreHidden": false,
  "coc.source.around.shortcut": "A",
  "coc.source.around.priority": 88,
  "coc.source.buffer.shortcut": "B",
  "coc.source.buffer.priority": 87,
  "coc.source.buffer.ignoreGitignore": false,
  // suggest
  "suggest.timeout": 500,
  "suggest.noselect": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.triggerCompletionWait": 100,
  "suggest.maxCompleteItemCount": 20,
  "suggest.detailMaxLength": 30,
  "suggest.detailField": "abbr",
  "suggest.snippetIndicator": " Ⓢ ",
  "suggest.echodocSupport": true,
  "suggest.completionItemKindLabels": {
    "function": "\uf794",
    "method": "\uf6a6",
    "variable": "\uf71b",
    "constant": "\uf8ff",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\ufa52",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf668",
    "color": "\ue22b",
    "property": "\ufab6",
    "field": "\uf93d",
    "unit": "\uf475",
    "file": "\uf471",
    "value": "\uf8a3",
    "event": "\ufacd",
    "folder": "\uf115",
    "keyword": "\uf893",
    "snippet": "\uf64d",
    "operator": "\uf915",
    "reference": "\uf87a",
    "typeParameter": "\uf278",
    "default": "\uf29c"
  },
  "snippets.ultisnips.directories": ["UltiSnips", "snip"],
  // diagnostic
  "diagnostic.enable": true,
  "diagnostic.level": "hint",
  "diagnostic.signOffset": 100,
  "diagnostic.highlightOffset": 100,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": true,
  "diagnostic.errorSign": "\uf65b",
  "diagnostic.warningSign": "\uf421",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic-languageserver.formatFiletypes": {
    "dart": "dartfmt"
  },
  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "markdown": ["write-good"],
    "sh": "shellcheck"
  },
  // prettier
  "prettier.statusItemText": "ⓟ ",
  //emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "html.suggest.angular1": false, // angular1 is outdate, coc-angular support better
  // git
  "git.enableGutters": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGlameToBufferVar": true,
  "git.addGlameToVirtualText": true,
  "git.virtualTextPrefix": " ❯❯❯ ",
  "git.addedSign.text": "▎",
  "git.changedSign.text": "▎",
  "git.removedSign.text": "▏",
  "git.topRemovedSign.text": "▔",
  "git.changeRemovedSign.text": "▋",
  //python
  "python.jediEnabled": false,
  "python.autoComplete.addBrackets": true,
  // java
  "java.jdt.ls.home": "/opt/app/jdtls",
  "java.jdt.ls.vmargs": "-javaagent:/opt/app/jar/lombok.jar -Xbootclasspath/p:/opt/app/jar/lombok.jar",
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "hpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "format": "b",
          "directory": "/tmp/ccls"
        },
        "capabilities": {
          "foldingRangeProvider": false,
          "workspace": {
            "workspaceFolders": {
              "supported": false
            }
          }
        },
        "clang": {
          "extraArgs": ["--gcc-toolchain=/usr"]
        },
        "completion": {
          "detailedLabel": true
        },
        "index": {
          "onChange": false,
          "initialNoLinkage": true,
          "threads": 2
        }
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh", "zsh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "markdown", "eruby"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"]
    },
    "xml": {
      "command": "java",
      "args": ["-jar", "/opt/app/jar/org.eclipse.lsp4xml-0.3.0-uber.jar"],
      "filetypes": ["xml"]
    }
  }
  // vim:ft=jsonc
}
