{
  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetStatusText": "Ⓢ ",
  "coc.preferences.formatOnType": true,
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.colorSupport": true,
  "coc.preferences.rootPatterns": [".git", ".projections.json"],
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "css",
    "bzl",
    "php",
    "python",
    "json",
    "jsonc",
    "markdown",
    "javascript",
    "typescript"
  ],
  "coc.source.emoji.shortcut": "E",
  "coc.source.emoji.priority": 8,
  "coc.source.word.filetypes": ["markdown", "gitcommit", "log", "txt", "text"],
  "coc.source.word.shortcut": "W",
  "coc.source.file.shortcut": "F",
  "coc.source.file.priority": 89,
  "coc.source.file.ignoreHidden": true,
  "coc.source.around.shortcut": "A",
  "coc.source.around.priority": 88,
  "coc.source.buffer.shortcut": "B",
  "coc.source.buffer.priority": 87,
  "coc.source.buffer.ignoreGitignore": false,
  //CocList
  "list.source.files.defaultOptions": ["--auto-preview"],
  "list.source.outline.defaultOptions": ["--auto-preview"],
  // session
  "session.saveOnVimLeave": true,
  // suggest
  "suggest.timeout": 500,
  "suggest.noselect": true,
  "suggest.enablePreview": false,
  "suggest.floatEnable": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.asciiCharactersOnly": true,
  "suggest.triggerCompletionWait": 100,
  "suggest.maxCompleteItemCount": 20,
  "suggest.detailMaxLength": 30,
  "suggest.detailField": "abbr",
  "suggest.snippetIndicator": "",
  "suggest.echodocSupport": true,
  "suggest.removeDuplicateItems": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u2A15",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\u2663",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf530",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf6a6",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "snippets.shortcut": "S",
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "snip",
    "gosnippets/UltiSnips"
  ],
  "snippets.ultisnips.usePythonx": true,
  "snippets.ultisnips.enable": true,
  "snippets.snipmate.author": "liubang <it.liubang@gmail.com>",
  // diagnostic
  "diagnostic.format": "[%source%code] [%severity] %message",
  "diagnostic.infoSign": "\uf449",
  "diagnostic.hintSign": "\ufad5",
  "diagnostic.warningSign": "\uf071",
  "diagnostic.errorSign": "\uf057",
  "diagnostic.enable": true,
  "diagnostic.signOffset": 9999999,
  "diagnostic.highlightOffset": 9999999,
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic-languageserver.formatters": {
    "buildifier": {
      "command": "buildifier",
      "args": []
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "bzl": "buildifier"
  },
  "diagnostic-languageserver.linters": {},
  "diagnostic-languageserver.filetypes": {},
  "diagnostic-languageserver.debug": false,
  // "diagnostic-languageserver.trace.server": "verbose",
  // prettier
  "prettier.statusItemText": "ⓟ ",
  //emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "html.suggest.angular1": false, // angular1 is outdate, coc-angular support better
  // calc
  "calc.replaceOriginalExpression": false,
  "calc.priority": 1000,
  "calc.highlight": true,
  // vimlsp
  "vimlsp.indexes.runtimepath": true,
  "vimlsp.indexes.gap": 10,
  "vimlsp.indexes.count": 3,
  "vimlsp.suggest.fromVimruntime": true,
  "vimlsp.suggest.fromRuntimepath": false,
  // git
  "git.enableGutters": true,
  "git.addGBlameToBufferVar": true,
  "git.addGBlameToVirtualText": false,
  "git.virtualTextPrefix": "     ",
  "git.branchCharacter": "\uf418",
  "git.addedSign.text": "+",
  "git.changedSign.text": "▎",
  "git.removedSign.text": "-",
  "git.topRemovedSign.text": "▔",
  "git.changeRemovedSign.text": "≃",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  // java
  "java.jdt.ls.home": "/opt/app/jdtls",
  "java.jdt.ls.vmargs": "-javaagent:/opt/app/jar/lombok.jar -Xbootclasspath/p:/opt/app/jar/lombok.jar",
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "languageserver": {
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"],
      "disableWorkspaceFolders": false,
      "initializationOptions": {
        "staticcheck": false,
        "usePlaceholders": true,
        "completeUnimported": true,
        "caseSensitiveCompletion": true
      }
      // for debug
      // "args": ["-logfile", "/tmp/gopls.log", "-v", "-rpc.trace"]
    }
  }
  // vim:ft=jsonc
}

